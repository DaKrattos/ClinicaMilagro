<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field columns large-4">
      <%= f.label :doctor_id %><br>
      <%= f.select :doctor_id, Doctor.order('name asc').map {|d| [d.name + ' ' +d.lastname, d.id]} %>
    </div> 
    <div class="field columns large-4">
      <%= f.label :date %><br>
      <%= f.date_field :date, value: @appointment.date %>
    </div>
    <div class="field columns large-4">
      <%= f.label :hour %><br>
      <%= f.time_field :hour, value: @appointment.hour %>
    </div>
  </div>
  <div class="row">
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit nil, :class => 'button success' %>
  </div>
<% end %>
